extends ../layout/_default-layout

prepend config-block
  - page_name = ''

block content-block
  .wrapper
    h1.title(data-heading-level='1') でびどるかーぶ！
    h2.heading(data-heading-level='2') Demo
    p.link-get-source
      a(href='https://github.com/butchi/devidol-curve/tree/master/_src', target='_blank')
        img(src='img/icon-mathematica.png', alt='get source!', width='69', height='69')
    .array-movie(data-mode='normal')
      .area-movie.item-movie
        svg.svg-canvas(width='640', height='380', xmlns='http://www.w3.org/2000/svg')
          desc でびどるかーぶ！
          g.svg-canvas__main
        aside.info--pause
          .block-info
      .original-movie.item-movie
        #original_movie
    audio.audio(src='audio/blank.mp3', controls='')
    .group-controller
      .controller-max-freq
        span.controller-max-freq__slidebar
          label
            span 次数（周波数上限）: 
            input(type='range', max='100', min='1', step='1', value='15')
        span.controller-max-freq__number
          input(type='number', max='100', min='1', step='1', value='15')
      .controller-quality
        button.controller-quality__button--lq(disabled='') 標準画質
        button.controller-quality__button--mq 高画質
        button.controller-quality__button--hq 最高画質
      div
        label
          input.controller-compare(type='radio', name='compare', value='normal', checked='')
          | 数式曲線
        label
          input.controller-compare(type='radio', name='compare', value='compare')
          | オリジナルと比較
        label
          input.controller-compare(type='radio', name='compare', value='overlay')
          | オーバーレイ
      .controller-color.controller-color--bg(data-color='transparent')
        | 背景:
        label
          input(type='radio', name='bg', value='transparent')
          | 透過
        label
          input(type='radio', name='bg', value='red')
          | 赤
        label
          input(type='radio', name='bg', value='black')
          | 黒
        label
          input(type='radio', name='bg', value='white')
          | 白
        label
          input(type='radio', name='bg', value='lime')
          | 緑
        label
          input(type='color')
          | カスタム
      .controller-color.controller-color--fill(data-color='transparent')
        | 塗り:
        label
          input(type='radio', name='fill', value='transparent')
          | 透過
        label
          input(type='radio', name='fill', value='red')
          | 赤
        label
          input(type='radio', name='fill', value='black')
          | 黒
        label
          input(type='radio', name='fill', value='white')
          | 白
        label
          input(type='radio', name='fill', value='lime')
          | 緑
        label
          input(type='color')
          | カスタム
      .controller-color.controller-color--line(data-color='white')
        | 輪郭:
        label
          input(type='radio', name='line', value='transparent')
          | 透過
        label
          input(type='radio', name='line', value='red')
          | 赤
        label
          input(type='radio', name='line', value='black')
          | 黒
        label
          input(type='radio', name='line', value='white')
          | 白
        label
          input(type='radio', name='line', value='lime')
          | 緑
        label
          input(type='color')
          | カスタム
      .controller-thickness
        span.controller-thickness__slidebar
          label
            span 太さ: 
            input(type='range', max='100', min='0.1', step='0.1', value='1')
        span.controller-thickness__number
          input(type='number', max='100', min='0.1', step='0.1', value='1')
    ul.list-share
      li.item.item--facebook
        .fb-like(data-layout='button_count', data-action='like', data-show-faces='true', data-share='true')
      li.item.item--twitter
        a.twitter-share-button(href='https://twitter.com/share') Tweet
        script.
          !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
    p.link-original-movie
      | Original: 
      a(href='https://www.youtube.com/', target='_blank') YouTube
    a(href='https://www.youtube.com/', target='_blank')
    p.link-author-home
      a(href='https://www.youtube.com/', target='_blank') created by 
      a(href='http://butchi.jp/', target='_blank') IWABUCHI Yu(u)ki
